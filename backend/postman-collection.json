{
  "info": {
    "name": "Disaster Response API",
    "description": "Complete API collection for testing all disaster response endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Disasters",
      "item": [
        {
          "name": "Get All Disasters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/disasters",
              "host": ["{{baseUrl}}"],
              "path": ["api", "disasters"]
            }
          }
        },
        {
          "name": "Create Disaster",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Earthquake\",\n  \"description\": \"Major earthquake reported in San Francisco Bay Area\",\n  \"location_name\": \"San Francisco\",\n  \"tags\": [\"earthquake\", \"emergency\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/disasters",
              "host": ["{{baseUrl}}"],
              "path": ["api", "disasters"]
            }
          }
        },
        {
          "name": "Update Disaster",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Earthquake Alert\",\n  \"description\": \"Updated earthquake situation\",\n  \"tags\": [\"earthquake\", \"updated\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/disasters/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "disasters", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "disaster-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Disaster",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/disasters/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "disasters", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "disaster-id-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Resources",
      "item": [
        {
          "name": "Get Resources",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/resources/:disasterId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resources", ":disasterId"],
              "variable": [
                {
                  "key": "disasterId",
                  "value": "test-disaster-id"
                }
              ]
            }
          }
        },
        {
          "name": "Get Resources with Location",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/resources/:disasterId?lat=40.7128&lng=-74.0060&radius=5000",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resources", ":disasterId"],
              "query": [
                {
                  "key": "lat",
                  "value": "40.7128"
                },
                {
                  "key": "lng",
                  "value": "-74.0060"
                },
                {
                  "key": "radius",
                  "value": "5000"
                }
              ],
              "variable": [
                {
                  "key": "disasterId",
                  "value": "test-disaster-id"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Social Media",
      "item": [
        {
          "name": "Get Social Media Reports",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/social-media/:disasterId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social-media", ":disasterId"],
              "variable": [
                {
                  "key": "disasterId",
                  "value": "test-disaster-id"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Geocoding",
      "item": [
        {
          "name": "Geocode Location",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Wildfire spreading near Los Angeles County\",\n  \"location_name\": \"Los Angeles County\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/geocode",
              "host": ["{{baseUrl}}"],
              "path": ["api", "geocode"]
            }
          }
        }
      ]
    },
    {
      "name": "Verification",
      "item": [
        {
          "name": "Verify Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image_url\": \"https://example.com/disaster-damage.jpg\",\n  \"context\": \"Hurricane damage verification\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/verification/verify-image",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification", "verify-image"]
            }
          }
        }
      ]
    }
  ]
}